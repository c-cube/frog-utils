  ["./configure"
    "--bindir" "%{bin}%"
    "--sharedstatedir" "%{share}%"
    "--%{opium+js_of_ocaml+react+reactiveData:enable}%-web"
    "--%{lwt-zmq+zmq+calculon:enable}%-irc"
    "--mandir" "%{man}%"]
  [make]
]
